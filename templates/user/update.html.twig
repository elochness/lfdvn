{% extends 'base.html.twig' %}

{% block body_id 'login' %}

{% block main %}
    <div class="box article-large">
        {{ form_start(form) }}

        <fieldset>
            <legend><i class="fas fa-user-circle" aria-hidden="true"></i> {{ 'title.user_update'|trans }}</legend>
            <div class="form-group">
                {{ form_label(form.lastname) }}
                {{ form_errors(form.lastname) }}
                {{ form_widget(form.lastname, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.firstname) }}
                {{ form_errors(form.firstname) }}
                {{ form_widget(form.firstname, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.cellphone) }}
                {{ form_errors(form.cellphone) }}
                {{ form_widget(form.cellphone, { 'attr': {'class': 'form-control'} }) }}
            </div>

            {{ form_end(form) }}

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-edit" aria-hidden="true"></i> {{ 'action.update'|trans }}
            </button>

            <a class="btn btn-a btn-primary" href="{{ path('user_account') }}">
                <i class="fas fa-undo" aria-hidden="true"></i> {{ 'action.return'|trans }}
            </a>
        </fieldset>

    </div>

{% endblock %}

{% block sidebar %}

{% endblock %}


