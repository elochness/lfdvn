{% extends 'base.html.twig' %}

{% block body_id 'login' %}

{% block main %}
    <div class="box article-large">
        {{ form_start(form) }}

        <fieldset>
            <legend><i class="fa fa-lock"></i> {{ 'title.user_update'|trans }}</legend>
            <div class="form-group">
                {{ form_label(form.lastname) }}
                {{ form_errors(form.lastname) }}
                {{ form_widget(form.lastname, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.firstname) }}
                {{ form_errors(form.firstname) }}
                {{ form_widget(form.firstname, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.cellphone) }}
                {{ form_errors(form.cellphone) }}
                {{ form_widget(form.cellphone, { 'attr': {'class': 'form-control'} }) }}
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fa fa-sign-in"></i> {{ 'action.update'|trans }}
            </button>
        </fieldset>

        {{ form_end(form) }}

    </div>

{% endblock %}

