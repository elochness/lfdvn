{% extends 'base.html.twig' %}

{% block body_id 'login' %}

{% block main %}

    <div class="box article-large">
        {{ form_start(form,  {'attr': {'novalidate': 'novalidate'}}) }}
        <fieldset>
            <legend><i class="fas fa-user-plus" aria-hidden="true"></i> {{ 'title.user_create'|trans }}</legend>
            {% if errorMessage|length %}
                <div class="alert alert-danger" role="alert">
                    {{ errorMessage }}
                </div>
            {% endif %}
            <div class="form-group">
                {{ form_label(form.email) }} {{ form_help(form.email) }}
                {% if app.request.method == 'GET' %}
                    {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                {% elseif not form_errors(form.email) %}
                    {{ form_widget(form.email, { 'attr': {'class': 'form-control is-valid'} }) }}
                {% else %}
                    {{ form_widget(form.email, { 'attr': {'class': 'form-control is-invalid'} }) }}
                {% endif %}
                <div class="form-error">
                    {{ form_errors(form.email) }}
                </div>
            </div>
            <div class="form-group">
                {{ form_label(form.lastName) }}
