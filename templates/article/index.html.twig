{% extends 'base.html.twig' %}

{% block body_id '_index' %}

{% block body_title %}
    <div class="row">
        <div class="col-sm-12">
            <h1>{{ 'title.homepage'|trans }}</h1>
        </div>
    </div>
{% endblock %}


{% block main %}

    <div>
        {% for article in paginator.results %}
            <article class="post">
                <article class="box article-large">
                    <h2>
                        {{ article.title }}
                    </h2>
                    <div>
                        {{article.contains | raw }}
                    </div>
                </article>
            </article>
        {% else %}
            <article class="box article-large">
                <h2>{{ 'label.article.not_found.title'|trans }}</h2>
                <div>
                    <div class="flex flex-center">
                        <div >{{ 'label.article.not_found.description'|trans }}</div>
                        <div><img class="center" src="{{ asset('build/images/svg/009-notes.svg') }}" width="128" height="128" alt="Note" /> </div>
                    </div>
                </div>

            </article>
        {% endfor %}
    </div>

    <div class="navigation text-center">
        {% if paginator.hasToPaginate %}
            <div class="navigation text-center">
                <ul class="pagination">
                    {% if paginator.hasPreviousPage %}
                        <li class="prev"><a href="{{ path('article_index_paginated', {page: paginator.previousPage}) }}" rel="previous"><i class="fa fw fa-long-arrow-left"></i> {{ 'paginator.previous'|trans }}</a></li>
                    {% else %}
                        <li class="prev disabled"><span><i class="fa fw fa-arrow-left"></i> {{ 'paginator.previous'|trans }}</span></li>
                    {% endif %}

                    {% for i in 1..paginator.lastPage %}
                        {% if i == paginator.currentPage %}
                            <li class="active"><span>{{ i }} <span class="sr-only">{{ 'paginator.current'|trans }}</span></span></li>
                        {% else %}
                            <li><a href="{{ path('article_index_paginated', {page: i}) }}">{{ i }}</a></li>
                        {% endif %}
                    {% endfor %}

                    {% if paginator.hasNextPage %}
                        <li class="next"><a href="{{ path('article_index_paginated', {page: paginator.nextPage}) }}" rel="next">{{ 'paginator.next'|trans }} <i class="fa fw fa-arrow-right"></i></a></li>
                    {% else %}
                        <li class="next disabled"><span>{{ 'paginator.next'|trans }} <i class="fa fw fa-arrow-right"></i></span></li>
                    {% endif %}
                </ul>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block sidebar %}

    {{ render_esi(controller('App\\Controller\\CompanyController::schedule', {
        'sharedAge': 600,
        '_locale': app.request.locale
    })) }}

    {{ parent() }}

{% endblock %}
