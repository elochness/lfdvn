{% extends 'base.html.twig' %}

{% block body_id '_index' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/css/breadcrumbs.css') }}"/>
{% endblock %}

{% block body_title %}
    <div class="row">
        <div class="col-sm-12">
            <h1>{{ 'title.product_order'|trans }}</h1>
        </div>
    </div>
{% endblock %}

{% block main %}

    <div class="box article-large">

        {% include 'product_order/_breadcrumb.html.twig' with {'currentStep': currentStep} only %}

        <h2>{{ 'title.product_order.summary'|trans }}</h2>

        <h3>{{ 'title.product_order.delivery_date'|trans }}</h3>

        <div class="paragraph">
            <p>{{ 'label.product_order.date_selected'|trans }} : {{ productOrder.deliveryDateFormatted }}</p>
        </div>

        <div class="separator">
            <p>ET</p>
        </div>

        <h3>{{ 'title.product_order.products_list'|trans }}</h3>

        {% include 'product_order/_product_order_summary.html.twig' with {'productOrder': productOrder, 'total': total} only %}

        <div class="separator">
            <p>{{ 'label.and'|trans }}</p>
        </div>

        <form method="post" action="{{ path('product_order_step4') }}">

            <h3>{{ 'label.product_order.remark_add'|trans }}</h3>
            <label>
                <textarea cols="70" rows="5" name="comment"></textarea>
            </label>

            <div class="separator">
                <p>{{ 'label.validate'|trans }}</p>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-cart-plus" aria-hidden="true"></i> {{ 'action.product_order'|trans }}
            </button>
        </form>

    </div>

{% endblock %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}